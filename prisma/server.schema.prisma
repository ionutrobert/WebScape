generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Player {
  id           String   @id @default(uuid())
  username     String   @unique
  createdAt    DateTime @default(now())
  lastLogin    DateTime @updatedAt
  
  x            Int      @default(10)
  y            Int      @default(10)
  facing       String   @default("south")
  
  hp           Int      @default(100)
  maxHp        Int      @default(100)
  energy       Int      @default(100)
  
  skills       PlayerSkill[]
  inventory    InventorySlot[]
  equipment    Equipment?
  bank         BankSlot[]
}

model PlayerSkill {
  id        String  @id @default(uuid())
  playerId  String
  skill     String
  xp        Int     @default(0)
  
  player    Player  @relation(fields: [playerId], references: [id], onDelete: Cascade)
  
  @@unique([playerId, skill])
}

model InventorySlot {
  id        String  @id @default(uuid())
  playerId  String
  slotIndex Int
  
  itemId    String
  quantity  Int     @default(1)
  
  player    Player  @relation(fields: [playerId], references: [id], onDelete: Cascade)
  
  @@unique([playerId, slotIndex])
}

model Equipment {
  id        String  @id @default(uuid())
  playerId  String  @unique
  
  head      String?
  cape     String?
  neck     String?
  weapon   String?
  body     String?
  legs     String?
  hands    String?
  feet     String?
  ring     String?
  ammo     String?
  
  player    Player  @relation(fields: [playerId], references: [id], onDelete: Cascade)
}

model BankSlot {
  id        String  @id @default(uuid())
  playerId  String
  slotIndex Int
  
  itemId    String
  quantity  Int     @default(1)
  
  player    Player  @relation(fields: [playerId], references: [id], onDelete: Cascade)
  
  @@unique([playerId, slotIndex])
}

model WorldConfig {
  id        String  @id @default("default")
  width     Int     @default(32)
  height    Int     @default(32)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorldTile {
  x          Int
  y          Int
  tileType   String  @default("grass")
  height     Float   @default(0.0)
  
  @@id([x, y])
}

model WorldObject {
  id           String  @id @default(uuid())
  x            Int
  y            Int
  definitionId String
  heightOffset Float   @default(0.0)
  status       String  @default("active")
  
  @@unique([x, y])
}
